extends layout.pug

block content
  main.page-content
    section.comments
      div(class='comments__wrapper')
        h1.visually-hidden Страница комментариев
        div(class='comments__block')
          div(class='comments__header')
            a.announce-card(href='#')
              h2(class='announce-card__title') Ленд Ровер
