extends layout.pug

block content
  main.page-content
    section.tickets-list
      h2.visually-hidden Самые новые предложения
      div(class='tickets-list__wrapper')
        div(class='tickets-list__header')
          a(href='#' class='tickets-list__btn btn btn--big')
            span Новая публикация
        ul
          each offer, index in offers
            li(class='tickets-list__item js-card')
              div(class=`ticket-card ticket-card--color${('0' + (index + 1)).slice(-2)}`)
                div(class='ticket-card__img')
                  img(src=`/img/${offer.picture}.jpg` srcset=`/img/${offer.picture}@2x.jpg 2x` alt=offer.title)
                div(class='ticket-card__info')
                  +ticketLabel(offer.type)
                  div(class='ticket-card__categories')
                    each category in offer.category
                      a(href="#") #{category}
                  div(class='ticket-card__header')
                    h3(class='ticket-card__title')
                      a(href=`offers/${offer.id}`) #{offer.title}
                    p(class='ticket-card__price')
                      span.js-sum #{offer.sum}
                      | ₽
                button(class='ticket-card__del js-delete' type='button') Удалить
