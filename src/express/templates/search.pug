extends layout.pug

block content
  main.page-content
    section.search-results
      h1.visually-hidden Результаты поиска
      div(class='search-results__wrapper')
        p(class='search-results__label') Найдено
          span.js-results  #{results.length} публикаций
        ul(class='search-results__list')
          each result in results
            li.search-results__item
              .ticket-card.ticket-card--color05
                .ticket-card__img
                  img(src=`/img/${result.picture}.jpg` alt=result.title)
                .ticket-card__info
                  span.ticket-card__label #{result.type === `offer` ? `Куплю` : `Продам`}
                  .ticket-card__categories
                    each category in result.category
                      a(href="#") #{category.name}
                  .ticket-card__header
                    h3.ticket-card__title
                      a(href="#") #{result.title}
                    p.ticket-card__price
                      span.js-sum #{result.sum}₽
                  .ticket-card__desc
                    p #{result.description}
    section.tickets-list
      h2.visually-hidden Самые новые предложения
      div(class='tickets-list__wrapper')
